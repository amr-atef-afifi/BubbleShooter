<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_level_chooser"
    android:orientation="vertical"
    tools:context=".LevelChooser" >

    <LinearLayout
        android:id="@+id/level_chooser_first_row"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/level_chooser_level1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:contentDescription="@string/content_description"
            android:onClick="to_level"
            android:paddingBottom="10dp"
            android:paddingLeft="40dp"
            android:paddingRight="5dp"
            android:paddingTop="40dp"
            android:src="@drawable/ic_game_port_unlocked" />

        <ImageView
            android:id="@+id/level_chooser_level2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:contentDescription="@string/content_description"
            android:onClick="to_level"
            android:paddingBottom="10dp"
            android:paddingLeft="5dp"
            android:paddingRight="40dp"
            android:paddingTop="40dp"
            android:src="@drawable/ic_game_christmas_locked" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/level_chooser_second_row"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/level_chooser_level3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:contentDescription="@string/content_description"
            android:onClick="to_level"
            android:paddingBottom="10dp"
            android:paddingLeft="40dp"
            android:paddingRight="5dp"
            android:src="@drawable/ic_game_sea_locked" />

        <ImageView
            android:id="@+id/level_chooser_level4"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:contentDescription="@string/content_description"
            android:onClick="to_level"
            android:paddingBottom="10dp"
            android:paddingLeft="5dp"
            android:paddingRight="40dp"
            android:src="@drawable/ic_game_factory_locked" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/level_chooser_third_row"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/level_chooser_level5"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:contentDescription="@string/content_description"
            android:onClick="to_level"
            android:paddingBottom="40dp"
            android:paddingLeft="40dp"
            android:paddingRight="5dp"
            android:src="@drawable/ic_game_street_locked" />

        <ImageView
            android:id="@+id/level_chooser_level6"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:contentDescription="@string/content_description"
            android:onClick="to_level"
            android:paddingBottom="40dp"
            android:paddingLeft="5dp"
            android:paddingRight="40dp"
            android:src="@drawable/ic_game_forest_locked" />
    </LinearLayout>

</LinearLayout>